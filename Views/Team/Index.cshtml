@model IEnumerable<Dilo.Models.Team>

@{
    var count = Model.Count();
}
<br>
<h3>Teams (@count)</h3>
<br>
              
 <table class="table table-hover">
    <tbody>
        <tr>        
          <th>FULL NAME</th>
            <th>ROLE</th>
            <th>ADDRESS</th>
            <th>E-MAIL</th>
            <th>PHONE</th>
            <th>ACTION</th>         
        </tr>

      @foreach(var t in Model) 
      {

        <tr>
            <td>@t.FullName</td>
            <td>@t.Role</td>
            <td>@t.Address</td>
            <td>@t.Email</td>
            <td>@t.Phone</td>
            <td><a href="/Team/Edit/@t.ID">Edit</a> | <a href="/Team/Delete/@t.ID">Delete</a></td>
        </tr>
    } 
     
        </tbody>
        </table>


<br>
<a href="/Team/Add" class="btn btn-primary">Add Team</a>

