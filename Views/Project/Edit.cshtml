@model Dilo.Models.Project

   <form asp-controller="Project" asp-action="Update" class="col-xs-4">
            <br>
            <h3>Edit Project</h3>
            <br>
     
            <div class="form-group">
                <input type="hidden" asp-for="ID">
                <label style="font-weight:normal">Project Name</label>
                <input type="text" class="form-control" asp-for="ProjectName">
                 <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label style="font-weight:normal">Initial</label>
                <input type="text" class="form-control" asp-for="Initial">
                <span asp-validation-for="Initial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-weight:normal">Description</label>
                <input type="text" class="form-control" asp-for="Description">
               <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="font-weight:normal">Status</label>
                <select class="form-control" asp-for="Status">
                    <option value="">- Change Status -</option>
                    <option value="New">New</option>
                    <option value="On Progress">On Progress</option>
                    <option value="Closed">Closed</option>
                </select>
                 <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        
            <br><br>
             <button type="submit" class="btn btn-primary pull-left" >Update Project</button>
       

    </form>
          